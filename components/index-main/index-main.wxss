/* components/indexmain/index-mian.wxss */
.main{
  display: flex;
  overflow: hidden;
  justify-content: space-between;
}
.menuBox{
  height: 100vh;
  overflow-y: auto;
}
.menu_scrollBox{
  height: 90%;
}
.menu-list{
  width:180rpx;
  padding:20rpx 35rpx 20rpx 15rpx;
  font-size:27rpx;
  background: rgb(250, 250, 250);
  border-left:10rpx solid rgb(236, 236, 240);  
  box-sizing: border-box;
}
.productBox{
  width:90%;
  height: 100vh;
  overflow-y: auto;
  padding-left:10rpx;
}
.scrollBox{
  height: 90%;
}
.navActive{
  border-left:10rpx solid burlywood;
  background: #fff;
}
.product-list{
  box-sizing: border-box;
}
.title{
  font-size:28rpx;
  display: block;
  height:60rpx;
  line-height: 60rpx;
}
.product{
  display: flex;
  margin-bottom:40rpx;
  padding-right:20rpx;
  box-sizing: border-box;
}
.imgBox{
  margin-left: -20rpx;
  margin-top:40rpx;
  width: 30%;
  height: 130rpx;
}
.img{
  width:100%;
  height:100%;
}
.descBox{
  width:70%;
  position: relative; 
}
.product_name{
  font-size:28rpx;
  font-weight:700;
}
.product_desc{
  margin:10rpx 0rpx;
  display: block;
  font-size:26rpx;
  color:#bbb;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 8rpx;
}
.product_price{
  font-weight: 900;
  font-size:34rpx;
}
.coverBox{
  position:fixed;
  left:0;
  top:0;
  width:100vw;
  height: 100vh;
  background: rgba(0, 0, 10, 0.5);
  z-index:90;
}

.current_choose{
  display: block;
  font-size:24rpx;
  color:#aaa;
}
.banner{
  width: 540rpx;
  height: 320rpx;
  margin-left: 3vw;
  border-radius: 3rpx;

}



  